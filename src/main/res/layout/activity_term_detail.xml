<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".TermDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/term_title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Term Title:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/term_title_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Enter term title" />

        <TextView
            android:id="@+id/term_start_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/term_start_date_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="Enter start date" />

        <TextView
            android:id="@+id/term_end_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/term_end_date_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="Enter end date" />

        <Button
            android:id="@+id/save_term_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Term"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/view_courses_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Courses"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>
