<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".CourseDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/course_title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Title:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/course_title_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Enter Course Title" />

        <TextView
            android:id="@+id/course_start_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/course_start_date_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="Enter Start Date" />

        <TextView
            android:id="@+id/course_end_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/course_end_date_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="Enter End Date" />

        <TextView
            android:id="@+id/course_status_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/course_status_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/course_instructor_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructor:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/course_instructor_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Enter Instructor Name" />

        <TextView
            android:id="@+id/course_instructor_phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructor Phone:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/course_instructor_phone_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="Enter Instructor Phone" />

        <TextView
            android:id="@+id/course_instructor_email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructor Email:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/course_instructor_email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Enter Instructor Email" />

        <TextView
            android:id="@+id/course_notes_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/course_notes_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="Enter Notes" />

        <Button
            android:id="@+id/save_course_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Course" />

    </LinearLayout>
</ScrollView>
